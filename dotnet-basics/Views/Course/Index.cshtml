@model List<Course>

<div class="d-flex justify-content-between align-items-center">
    <h1 class="h3 mb-3">Kurslar</h1>

    <a asp-controller="Course" asp-action="List" class="btn btn-outline-danger">Tum Kurslar</a>
</div>


<div class="courses row">
    @foreach(Course course in Model) {
        if (course.IsHome) {
            <div class="col-md-4">
                @await Html.PartialAsync("_CourseCard", course)
            </div>
        }
    }
</div>